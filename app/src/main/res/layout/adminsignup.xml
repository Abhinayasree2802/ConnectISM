<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper1"
    android:padding="20dp"
    tools:context=".SignUpAdmActivity">

    <!--TextView: Register Login-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Administration Register"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="30sp" />

    <!--EditText: Input Name-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/nameTIL">

        <EditText
            android:id="@+id/nameadm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="Name"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--EditText: Input Designation-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:id="@+id/desgTIL"
        android:layout_below="@+id/nameTIL">
        <EditText
            android:id="@+id/desgadm"
            android:inputType="text"
            android:hint="Designation"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!--EditText: Input Email-->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/emailTIL"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/desgTIL">
        <EditText
            android:id="@+id/emailadm"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--EditText: Input Password-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/passwordTIL"
        android:layout_below="@+id/emailTIL"
        android:layout_marginTop="5dp"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/password1adm"
            android:inputType="textPassword"
            android:hint="Password"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--EditText: Input Password-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/passwordTIL1"
        android:layout_below="@+id/passwordTIL"
        android:layout_marginTop="5dp"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/password2adm"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--Button: Register User-->
    <Button
        android:id="@+id/registeradm"
        style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordTIL1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Register"
        app:backgroundTint="@color/teal_700" />

    <!--TextView: Click go to LoginActivity-->
    <TextView
        android:id="@+id/have_accountadm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login"
        android:textAlignment="center"
        android:layout_below="@+id/registeradm"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>

</RelativeLayout>



